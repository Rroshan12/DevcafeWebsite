pipeline {
    agent any

    stages {
        stage('Prepare') {
            steps {
                // Fetch and append GitHub host key to known_hosts
                sh 'ssh-keyscan -t rsa github.com >> ~/.ssh/known_hosts'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    docker.build('devcafe-website')
                }
            }
        }
        stage('Docker Publish') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-registry-credentials', usernameVariable: 'DOCKER_REGISTRY_USERNAME', passwordVariable: 'DOCKER_REGISTRY_PASSWORD')]) {
                    script {
                        docker.withRegistry('https://hub.docker.com', 'DOCKER_REGISTRY_USERNAME', 'DOCKER_REGISTRY_PASSWORD') {
                            docker.image('devcafe-website').push('latest')
                        }
                    }
                }
            }
        }
    }
}
